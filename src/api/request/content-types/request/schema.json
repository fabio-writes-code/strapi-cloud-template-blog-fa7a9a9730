{
  "kind": "collectionType",
  "collectionName": "requests",
  "info": {
    "singularName": "request",
    "pluralName": "requests",
    "displayName": "Request"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "blocks"
    },
    "category": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "Legislative Analysis",
        "Policy Research",
        "Economic Analysis",
        "Legal Research",
        "Political Intelligence",
        "Regulatory Review"
      ]
    },
    "priority": {
      "type": "enumeration",
      "enum": [
        "high",
        "medium",
        "low"
      ]
    },
    "requestStatus": {
      "type": "enumeration",
      "default": "Pending",
      "enum": [
        "Pending",
        "In Progress",
        "Completed"
      ]
    },
    "requester": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::profile.profile",
      "inversedBy": "requests"
    },
    "analysts": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::author.author",
      "mappedBy": "request"
    },
    "estimatedCost": {
      "type": "decimal"
    },
    "requestedDate": {
      "type": "date",
      "required": true
    },
    "dateStarted": {
      "type": "date"
    },
    "estimatedTimeframe": {
      "type": "string"
    },
    "progress": {
      "type": "integer"
    },
    "completedAt": {
      "type": "date"
    },
    "deliverable": {
      "type": "component",
      "component": "request-deliverable.deliverables",
      "repeatable": true
    },
    "attachment": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    }
  }
}
